<h2>TripEstimator</h2>
<h1 class="text-center">Go to travel</h1>
<h3 class="text-center">Find how much money you will need</h3>
<br>
<%= form_for(@search, html: {class:"form-horizontal", "style"=>"font-size:16px"}) do |f| %>
  <div class="row">
    <div class="col-md-6 text-right">
      <div class="form-group">
        <%= f.label t(:start_city) %>
        <%= f.text_field :start_city, id: 'gmaps-input-address' %>
      </div>
      <div class="form-group">
        <%= f.label :start_date %>
        <%= f.text_field :start_date, placeholder: "(optional)" %>
      </div>
    </div>
    <div class="col-md-3 text-right">
      <div class="form-group">
        <%= f.label t(:end_city) %>
        <%= f.text_field :end_city, id: 'gmaps-input-address' %>
      </div>
      <div class="form-group">
        <%= f.label :end_date %>  
        <%= f.text_field :end_date, placeholder: "(optional)" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group text-center">
      <%= f.button t(:estimate_btn), class:"btn btn-success btn-lg" %>
    </div>
  </div>
<% end %>